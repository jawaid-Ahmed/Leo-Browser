<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
   <item android:state_checked="true">
       <shape android:shape="rectangle">
           <corners android:radius="100dp"></corners>
           <size android:width="24dp" android:height="24dp"></size>
           <solid android:color="@color/whiteColor"></solid>
           <stroke android:width="4dp" android:color="@android:color/transparent"></stroke>
       </shape>
   </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <corners android:radius="100dp"></corners>
            <size android:width="24dp" android:height="24dp"></size>
            <solid android:color="@color/skyblue"></solid>
            <stroke android:width="4dp" android:color="@android:color/transparent"></stroke>
        </shape>
    </item>


</selector>

