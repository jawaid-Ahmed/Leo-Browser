<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/darkColor</item>
        <item name="colorPrimaryDark">@color/darkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/darkColor</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/darkColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>
    <style name="AppThemeSplash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/darkColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppThemewithbar" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimary</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textColor">@color/whiteColor</item>
    <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    <item name="android:statusBarColor" tools:targetApi="lollipop">@color/darkColor</item>
        </style>

    <style name="AppThemeHistory" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/darkColor</item>
        <item name="colorPrimaryDark">@color/darkColor</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/darkColor</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:layout_margin">2dp</item>
        <item name="animate_relativeTo">@layout/bottom_nav</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">350dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:background">@drawable/edittextbg</item>
    </style>

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/black</item>
    </style>


    <style name="myAlertDialoge" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearancCustomDialoge</item>
        <item name="colorSurface">@color/darkColor</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MessageTextStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="ShapeAppearancCustomDialoge" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="rippleColor">@color/whiteColor</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="rippleColor">@color/whiteColor</item>
        <item name="android:textSize">16dp</item>
    </style>
    <style name="MessageTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/whiteColor</item>
        <item name="android:textSize">15dp</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App" parent="Theme.MaterialComponents">
        ...
        <item name="colorSecondary">@color/whiteColor</item>
        <item name="colorOnSecondary">@color/darkColor</item>
        <item name="colorOnSurface">@color/colorAccent</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
    </style>

    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">4dp</item>
        <item name="cornerRadius">5dp</item>
    </style>
    <style name="positionIndicator">
        <item name="android:textColor">#8cffffff</item>
        <item name="android:textSize">66sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">normal</item>
    </style>

    <style name="positionIndicatorCurrent" parent="positionIndicator">
        <!--<item name="android:textColor">#da7c80b8</item>-->
        <item name="android:textColor">#ffffff</item>
    </style>

</resources>
