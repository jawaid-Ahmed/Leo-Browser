<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/darkColor"
    android:id="@+id/history_rootView"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/btmapimage"
        android:layout_width="20dp"
        android:layout_margin="2dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/whiterectangle"
        android:src="@drawable/global"
        android:layout_height="20dp"></ImageView>

    <LinearLayout
        android:layout_toEndOf="@+id/btmapimage"
        android:layout_toRightOf="@+id/btmapimage"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/history_title"
        android:textSize="12dp"
        android:textStyle="bold"
        android:textColor="@color/whiteColor"
        android:text="this is title"
        android:maxLines="1"
        android:textIsSelectable="false"
        android:layout_marginHorizontal="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/history_url"
        android:textSize="12dp"
        android:textColor="@color/whiteColor"
        android:text="this is history url"
        android:layout_marginHorizontal="4dp"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    </LinearLayout>

    <CheckBox
        android:id="@+id/checkbox_history"
        android:backgroundTint="@color/darkColor"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></CheckBox>
</RelativeLayout>