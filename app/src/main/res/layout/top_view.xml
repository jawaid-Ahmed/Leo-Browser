<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edittextdrawableslayoutmain"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:padding="2dp"
    android:visibility="visible"
    android:background="@android:color/transparent"
    android:layout_alignParentTop="true">

    <RelativeLayout
        android:id="@+id/edittextdrawableslayout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/edittext_bg"
        >




        <EditText
            android:id="@+id/search_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/drawableRight"
            android:layout_toRightOf="@id/drawableLeft"
            android:background="@android:color/transparent"
            android:elevation="8dp"
            android:hint="Search any web address"
            android:textColorHint="@color/lightdarkColor"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:padding="3dp"
            android:textSize="14dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:textColor="@color/newsTextColor"></EditText>


        <ImageButton
            android:id="@+id/drawableLeft"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/goog"></ImageButton>

        <View
            android:layout_toEndOf="@id/search_home"
            android:layout_toLeftOf="@+id/drawableRight"
            android:layout_width="1dp"
            android:layout_height="match_parent"></View>

        <ImageButton
            android:id="@+id/drawableRight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_mic_24"></ImageButton>


    </RelativeLayout>


</RelativeLayout>