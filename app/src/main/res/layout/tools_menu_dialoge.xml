<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextbg"
        android:elevation="20dp"
        app:cardBackgroundColor="@color/darkColor"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_weight="1"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="101dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/full_screen"
                        android:layout_width="@dimen/bottommenubutton_width"
                        android:layout_height="@dimen/bottommenubutton_height"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_fullscreen_24"></ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fullscreen"
                        android:textColor="@color/whiteColor"
                        android:textSize="10dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="5dp"
                    android:layout_height="101dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/tool_barcode"
                        android:layout_width="@dimen/bottommenubutton_width"
                        android:layout_height="@dimen/bottommenubutton_height"
                        android:scaleType="centerInside"
                        android:padding="@dimen/menuIconsPadding"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_barcode"></ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Barcode"
                        android:textColor="@color/whiteColor"
                        android:textSize="10dp"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="101dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/tool_print"
                        android:layout_width="@dimen/bottommenubutton_width"
                        android:layout_height="@dimen/bottommenubutton_height"
                        android:scaleType="centerInside"
                        android:padding="@dimen/menuIconsPadding"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_print_24"
                        ></ImageButton>

                    <TextView
                        android:id="@+id/darkMode_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Print"
                        android:textColor="@color/whiteColor"
                        android:textSize="10dp"></TextView>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="101dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/tool_extra"
                        android:layout_width="@dimen/bottommenubutton_width"
                        android:layout_height="@dimen/bottommenubutton_height"
                        android:scaleType="centerInside"
                        android:padding="@dimen/menuIconsPadding"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_web_load"></ImageButton>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Load Website"
                        android:textColor="@color/whiteColor"
                        android:textSize="10dp"></TextView>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
