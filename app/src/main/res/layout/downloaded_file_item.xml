<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="7"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    android:padding="2dp"
    android:background="@color/whiteColor"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/download1"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:background="@color/darkColor"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="8dp"
            android:layout_width="40dp"
            android:padding="3dp"
            android:layout_height="40dp">
            <ImageView
                android:id="@+id/icon_downloaded"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                ></ImageView>

            <TextView
                android:id="@+id/fileExtensionDownloaded"
                android:textSize="8dp"
                android:textColor="@color/darkColor"
                android:background="@color/whiteColor"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:layout_weight="5.6"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/whiteColor"
                android:id="@+id/titleDownloaded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textStyle="italic"
                android:textSize="12dp"
                android:text="This is downloading title"></TextView>

           <LinearLayout
               android:gravity="left"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:id="@+id/date_Downloaded"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="8dp"
                   android:textSize="10dp"
                   android:fontFamily="@font/raleway_semibold"
                   android:layout_marginRight="10dp"
                   android:textColor="@color/lightdarkColor" />

               <TextView
                   android:id="@+id/size_Downloaded"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="8dp"
                   android:textSize="10dp"
                   android:fontFamily="@font/raleway_semibold"
                   android:layout_marginRight="10dp"
                   android:textColor="@color/lightdarkColor" />


           </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:id="@+id/share_downloaded"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="40dp"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:background="@drawable/buttonshape"
            android:src="@drawable/ic_retry"
            android:layout_marginRight="8dp"
            android:layout_height="35dp"></ImageButton>


    </LinearLayout>
</androidx.cardview.widget.CardView>