<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/darkColor"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:layout_weight="2"
            android:textColor="@color/whiteColor"
            android:fontFamily="@font/raleway_semibold"
            android:text="Files Storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/save_refresh_downloadbotmsheet"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textColor="@color/whiteColor"
            android:fontFamily="@font/raleway_semibold"
            android:text="Save"
            android:textAllCaps="false"
            android:background="@drawable/edittext_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></Button>

    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/storageGroup"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/check_internal"
                android:layout_margin="5dp"
                android:textColor="@color/whiteColor"
                android:background="@android:color/transparent"
                android:drawableTint="@color/whiteColor"
                android:layout_width="wrap_content"
                android:text="Storage"
                android:layout_height="wrap_content">

            </RadioButton>

            <RadioButton
                android:id="@+id/check_sd_card"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:text="Sd Card"
                android:textColor="@color/whiteColor"
                android:background="@android:color/transparent"
                android:drawableTint="@color/whiteColor"
                android:layout_height="wrap_content">

            </RadioButton>
            <RadioButton
                android:id="@+id/check_firebrowser"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:text="Leo Browser"
                android:textColor="@color/whiteColor"
                android:background="@android:color/transparent"
                android:drawableTint="@color/whiteColor"
                android:layout_height="wrap_content">

            </RadioButton>

        </RadioGroup>


    </LinearLayout>
    <TextView
        android:layout_margin="15dp"
        android:textSize="18sp"
        android:textColor="@color/whiteColor"
        android:fontFamily="@font/raleway_semibold"
        android:text="Max Download Threads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioGroup
            android:id="@+id/threadsGroup"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <RadioButton
                android:id="@+id/check_one"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:text="1"
                android:textColor="@color/whiteColor"
                android:background="@android:color/transparent"
                android:drawableTint="@color/whiteColor"
                android:layout_height="wrap_content">
            </RadioButton>

            <RadioButton
                android:id="@+id/check_two"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:text="2"
                android:textColor="@color/whiteColor"
                android:background="@android:color/transparent"
                android:drawableTint="@color/whiteColor"
                android:layout_height="wrap_content">
            </RadioButton>
            <RadioButton
                android:id="@+id/check_three"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:text="3"
                android:textColor="@color/whiteColor"
                android:background="@android:color/transparent"
                android:drawableTint="@color/whiteColor"
                android:layout_height="wrap_content">
            </RadioButton>
            <RadioButton
                android:id="@+id/check_four"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:text="4"
                android:textColor="@color/whiteColor"
                android:background="@android:color/transparent"
                android:drawableTint="@color/whiteColor"
                android:layout_height="wrap_content">

            </RadioButton>
            <RadioButton
                android:id="@+id/check_five"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:text="5"
                android:textColor="@color/whiteColor"
                android:background="@android:color/transparent"
                android:drawableTint="@color/whiteColor"
                android:layout_height="wrap_content">

            </RadioButton>


        </RadioGroup>


    </LinearLayout>



</LinearLayout>